
  <%- include('../partials/navbar') %> 
    <!-- CArds -->
    <div class="d-flex flex-wrap p-4 justify-content-between align-items-stretch mt-5">
        <% for (let product of products) { %>
          <div class="card mb-4 me-4 border-2" style="width: 18rem;">
            <img src="<%= product.image %>" class="card-img-top" alt="...">
            <div class="card-body d-flex flex-column">
              <h5 class="card-title"><%= product.name %></h5>
              <p class="flex-grow-1">Price : $ <%= product.price %></p>
              <p class="flex-grow-1">Description: <%= product.description %></p>
              <div class="card-footer mt-auto">

                <a href="/products/<%= product.id %>" class="btn btn-primary">Buy Now</a>
                

            </div>
            </div>
          </div>
        <% } %>
      </div>
      
    <!-- footer -->
    <%- include('../partials/footer') %>
      
      

    

    
